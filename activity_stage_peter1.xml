<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D69D9D"
    tools:context=".Stage_Peter1">

    <TextView
        android:id="@+id/title_activity_stage_peter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:includeFontPadding="false"
        android:text="@string/Introduction_PeterGame1"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/door"
        android:layout_width="276dp"
        android:layout_height="335dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="230dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="311dp"
        android:scaleType="centerInside"
        android:scaleX="3"
        android:scaleY="3"
        app:srcCompat="@drawable/door" />

    <ImageButton
        android:id="@+id/key"
        android:layout_width="213dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="408dp"
        app:srcCompat="@drawable/key" />

    <ImageButton
        android:id="@+id/meat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="62dp"
        app:srcCompat="@drawable/meat" />

    <ImageButton
        android:id="@+id/bones"
        android:layout_width="247dp"
        android:layout_height="198dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="89dp"
        app:srcCompat="@drawable/bone" />

    <ImageButton
        android:id="@+id/dog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-11dp"
        android:layout_marginTop="124dp"
        app:srcCompat="@drawable/dog" />

</RelativeLayout>