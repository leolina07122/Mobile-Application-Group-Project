<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sa_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stage_Alex1">

    <RelativeLayout
        android:id="@+id/sa_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="185dp">

        <TextView
            android:id="@+id/sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="88dp"
            android:text="@string/score"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/sa_ansloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/textView_eq"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@drawable/sq" />

        <TextView
            android:id="@+id/textView_num1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="right|top"
            android:text="1"
            android:textSize="64sp"
            app:autoSizeMaxTextSize="128sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView_num4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textView_num1"
            android:gravity="right|top"
            android:text="4"
            android:textSize="64sp"
            app:autoSizeMaxTextSize="128sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView_num3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textView_sub"
            android:gravity="right|top"
            android:text="3"
            android:textSize="64sp"
            app:autoSizeMaxTextSize="128sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textView_num4"
            android:gravity="right|top"
            android:text="-"
            android:textSize="64sp"
            app:autoSizeMaxTextSize="128sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView_eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/textView_num3"
            android:gravity="right|top"
            android:text="="
            android:textSize="64sp"
            app:autoSizeMaxTextSize="128sp"
            tools:ignore="MissingConstraints" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>