<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Stage_Alex2">

    <RelativeLayout
        android:id="@+id/sarl2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="88dp"
            android:text="@string/score"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/textView_qu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sc2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/stage_alex_qt"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/gold_img"
            android:layout_width="179dp"
            android:layout_height="186dp"
            android:layout_below="@id/bike_img"
            android:layout_centerVertical="false"
            app:srcCompat="@drawable/gold" />

        <ImageView
            android:id="@+id/banana_img"
            android:layout_width="223dp"
            android:layout_height="183dp"
            android:layout_below="@id/mesh_img"
            android:layout_centerVertical="false"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/board_img"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:srcCompat="@drawable/banana" />

        <ImageView
            android:id="@+id/bike_img"
            android:layout_width="174dp"
            android:layout_height="152dp"
            android:layout_below="@id/textView_qu"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            android:scaleX="1"
            app:srcCompat="@drawable/bike" />

        <ImageView
            android:id="@+id/board_img"
            android:layout_width="174dp"
            android:layout_height="190dp"
            android:layout_below="@id/bike_img"
            android:layout_centerVertical="false"
            app:srcCompat="@drawable/board" />

        <ImageView
            android:id="@+id/mesh_img"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:layout_below="@id/textView_qu"
            android:layout_centerVertical="false"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/bike_img"
            app:srcCompat="@drawable/mesh" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>